<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All users</title>
    <style>
        table,tr,th,td{
            border:  2px solid black;
        }
    </style>
</head>
<body>
    
    <table>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Email</th>
            <th>Edit User</th>
        </tr>
        <%for(let user of result){ %>
    <tr>
        <td>
            <%=user.id%>
        </td>
        <td><%=user.name%></td>
        <td><%=user.email%></td>
        <td>
               <form action="/users/<%=user.id%>/edit" method="GET">
            <button>Edit User</button>
        </form>
        </td>
        <td>
            <form action="/users/<%=user.id%>?_method=DELETE" method="POST"><button>DELETE</button></form>
        </td>
    </tr>
<%}%>

    </table>
    <a href="/users/delete">delete a user</a>
</body>
</html>

